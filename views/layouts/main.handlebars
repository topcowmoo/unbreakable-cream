<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>Unbreakable Cream</title>
    <script
      src='https://kit.fontawesome.com/01c9706a59.js'
      crossorigin='anonymous'
    ></script>
    <link rel='preconnect' href='https://fonts.googleapis.com' />
    <link rel='preconnect' href='https://fonts.gstatic.com' crossorigin />
    <link
      href='https://fonts.googleapis.com/css2?family=Inter:wght@100..900&display=swap'
      rel='stylesheet'
    />
    <link
      rel='stylesheet'
      href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css'
    />
    <link rel='icon' type='image/png' sizes='32x32' href='/images/logo.gif' />
    <link rel='stylesheet' href='/css/dashboard.css' />
    <link rel='stylesheet' href='/css/style.css' />
  </head>

  <body>

    <nav class='nav-bar'>
      <a class='navbar-brand' href='#'>
        <img
          src='/images/logo.gif'
          alt='Logo'
          style='width: 125px; height: 125px;'
        />
      </a>
      <ul class='nav justify-content-end'>
        <li class='nav-item' id='homebtn'><i
            class='fa-solid fa-house'
            style='font-size:30px'
          ></i></li>
        <li class='nav-item' id='dashboardbtn'><i
            class='fa-solid fa-hippo'
            style='font-size:30px'
          ></i></li>
        {{#if loggedIn}}
          <li class='nav-item' id='postbtn'><i
              class='fa-regular fa-comment-dots'
              style='font-size:30px'
            ></i></li>
          <li class='nav-item' id='logoutbtn'><i
              class='fa-solid fa-user-slash'
              style='font-size:30px'
            ></i></li>
        {{else}}
          <li class='nav-item' id='loginbtn'><i
              class='fa-regular fa-user'
              style='font-size:30px'
            ></i></li>
        {{/if}}
      </ul>
    </nav>
    {{{body}}}
    <footer>
      <h4>
        Unbreakable Cream
        <br />
        <a href='#' target='_blank'>
          <i class='fa-solid fa-envelope-circle-check'></i>
        </a>
        <a
          href='https://github.com/topcowmoo/unbreakable-cream'
          target='_blank'
        >
          <i class='fa-brands fa-github-alt'></i>
        </a>
      </h4>
    </footer>
     <script src="/js/index.js"></script>
    <script src="/js/logout.js"></script>
  </body>
</html>
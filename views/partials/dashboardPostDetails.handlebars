<section class='card'>
  <div class='card-head'>
    <h3 class='card-title' id='{{post_id}}'>{{post_title}}</h3>
  </div>
  <div class='card-options'>
    
      <a href='/editpost/{{post_id}}'>
      <i
        class='fa-solid fa-user-pen'
      ></i>
      </a>
      
      
      <i
        class='fa-solid fa-trash-can'
        data-deleted="{{post_id}}"onclick="deletePostHandler(event)"
      ></i>
      
  </div>
  <div class='card-body'>
    {{post_content}}
  </div>
</section>
<script src="/js/index.js"></script>
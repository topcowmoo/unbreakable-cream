<section class='card'>
  <div class='card-head'>
    <h3 class='card-title' id='{{post_id}}'>{{post_title}}</h3>
    <div>
      <p>Posted by
        <span id='username'>{{user.username}}</span>
        at
        {{format_date updatedAt}}</p>
    </div>
  </div>
  <div class='card-body'>
    {{post}}
  </div>
</section>
{{!-- Log-in Page --}}
<link rel="stylesheet" href="/css/login.css">
<div class="log-in-card">
    {{!-- Left Section to log-in to application --}}
    <div class="log-in">
        <h2>Log-In:</h2>
        <form id="log-in-form">
            <div class="form-element">
                <label for="username">Username:</label>
                <input type="text" id="username" name="username"><br>
            </div>
            <div class="form-element">
                <label for="password">Password:</label>
                <input type="password" id="password" name="password"><br>
            </div>
            <input type="submit" value="Login" class="submit">
            <p id="login-failed" class="message login-failed" style="display:none">Username or password incorrect</p>
        </form>
    </div>
    {{!-- Right section to create a new profile --}}
    <div class="create-profile">
        <h2>Sign up</h2>
        <form id="create-profile-form">
            <div class="form-element">
                <label for="email">Enter Email:</label>
                <input type="email" id="email" name="email"><br>
            </div>
            <div class="form-element">
                <label for="username">Create Username:</label>
                <input type="text" id="create-username" name="username"><br>
            </div>
            <div class="form-element">
                <label for="password">Create Password:</label>
                <input type="password" id="create-password" name="password"><br>
            </div>
            <input type="submit" value="Create Profile" class="submit">
            <p id="register-failed" class="message register-failed" style="display:none">Email or username already exists</p>
            <p id="register-success" class="message register-success" style="display:none">New user created!  Now login please!</p>
        </form>
    </div>
</div>
{{!-- Add script tag connecting to public scripts --}}
<script src="/js/login.js"></script>
<script src="/js/register.js"></script>